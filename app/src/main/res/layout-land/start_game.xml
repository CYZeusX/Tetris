<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_l"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dmg">

    <RelativeLayout
        android:id="@+id/mon_back"
        android:layout_width="350dp"
        android:layout_height="290dp"
        android:background="@drawable/mon_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/textView"
            android:layout_width="226dp"
            android:layout_height="207dp"
            android:layout_centerInParent="true"
            android:background="@drawable/monitor" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/tetris"
            android:src="@drawable/tetrisnew" />

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="17dp"
            android:backgroundTint="#555B27"
            android:elevation="12dp"
            android:text="@string/start"
            android:textStyle="bold"
            app:cornerRadius="25dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/text_nm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/mon_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_face"
            android:textColor="@color/matte"
            android:textSize="22sp"
            android:textStyle="bold"
            app:flow_horizontalBias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/gb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-6dp"
            android:layout_toEndOf="@id/nin"
            android:text="@string/game_face2"
            android:textColor="@color/matte"
            android:textSize="28sp"
            android:textStyle="italic"
            app:layout_constraintTop_toTopOf="@+id/nin" />

        <TextView
            android:id="@+id/sm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/gb"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@id/gb"
            android:text="@string/game_face3"
            android:textColor="@color/matte" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pad_left"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/nul"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mon_back"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/pad_mid"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerInParent="true"
            android:background="@color/pad"
            android:elevation="0dp">
        </RelativeLayout>

        <Button
            android:id="@+id/a"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="-8dp"
            android:layout_toStartOf="@id/pad_mid"
            android:backgroundTint="@color/pad"
            android:rotation="-90"
            tools:ignore="RtlSymmetry"
            android:outlineAmbientShadowColor="@color/pad"
            app:cornerRadius="5dp"/>

        <Button
            android:id="@+id/d"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="-8dp"
            android:layout_toEndOf="@id/pad_mid"
            android:backgroundTint="@color/pad"
            android:rotation="-90"
            tools:ignore="RtlSymmetry"
            android:outlineAmbientShadowColor="@color/pad"
            app:cornerRadius="5dp"/>

        <Button
            android:id="@+id/w"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_above="@id/pad_mid"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-8dp"
            android:backgroundTint="@color/pad"
            android:outlineAmbientShadowColor="@color/pad"

            app:cornerRadius="5dp"/>

        <Button
            android:id="@+id/s"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@id/pad_mid"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-8dp"
            android:backgroundTint="@color/pad"
            android:outlineAmbientShadowColor="@color/pad"
            app:cornerRadius="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pad_right"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mon_back"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/pad_cent"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:background="@color/dmg"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/Y"
            android:layout_width="55dp"
            android:layout_height="62dp"
            android:text="Y"
            android:textColor="@color/btn_txt"
            android:backgroundTint="@color/btn"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/pad_cent"
            app:shapeAppearanceOverlay="@style/button"/>

        <Button
            android:id="@+id/A"
            android:layout_width="55dp"
            android:layout_height="62dp"
            android:text="A"
            android:textColor="@color/btn_txt"
            android:backgroundTint="@color/btn"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/pad_cent"
            app:shapeAppearanceOverlay="@style/button" />

        <Button
            android:id="@+id/X"
            android:layout_width="55dp"
            android:layout_height="62dp"
            android:text="X"
            android:textColor="@color/btn_txt"
            android:backgroundTint="@color/btn"
            android:layout_toStartOf="@id/pad_cent"
            android:layout_centerVertical="true"
            app:shapeAppearanceOverlay="@style/button" />

        <Button
            android:id="@+id/B"
            android:layout_width="55dp"
            android:layout_height="62dp"
            android:text="B"
            android:textColor="@color/btn_txt"
            android:backgroundTint="@color/btn"
            android:layout_toEndOf="@id/pad_cent"
            android:layout_centerVertical="true"
            app:shapeAppearanceOverlay="@style/button" />
    </RelativeLayout>

    <Button
        android:id="@+id/l1"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/dmg"
        android:layout_marginTop="-10dp"
        app:cornerRadius="5dp"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintEnd_toStartOf="@+id/mon_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/pad"
        app:strokeWidth="2dp"/>

    <Button
        android:id="@+id/r1"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/dmg"
        android:layout_marginTop="-10dp"
        app:layout_constraintHorizontal_bias="0.3"
        app:cornerRadius="5dp"
        app:layout_constraintStart_toEndOf="@id/mon_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/pad"
        app:strokeWidth="2dp"/>

    <Button
        android:id="@+id/orient_at_land"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/func"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/r1"
        app:layout_constraintTop_toTopOf="@+id/mon_back" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="28dp"
        android:background="@drawable/pot"
        android:contentDescription="@string/nul"
        app:layout_constraintBottom_toBottomOf="@+id/orient_at_land"
        app:layout_constraintEnd_toEndOf="@+id/orient_at_land"
        app:layout_constraintStart_toStartOf="@+id/orient_at_land"
        app:layout_constraintTop_toTopOf="@+id/orient_at_land" />

    <Button
        android:id="@+id/orient_at_portrait"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>